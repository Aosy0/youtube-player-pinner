{
  "manifest_version": 3,
  "name": "YouTube Player Pinner",
  "version": "1.2.0",
  "description": "YouTubeのプレイヤーをスクロール時に上部へ固定します",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/watch*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}